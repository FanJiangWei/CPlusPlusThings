# rules Makefile
MAKE_USE_COLOR?=1

ifeq ($(MAKE_USE_COLOR),1)
CL_RED="\033[31;1m"
CL_GREEN="\033[32;1m"
CL_YELLOW="\033[33;1m"
CL_BLUE="\033[34;1m"
CL_MAGENTA="\033[35;1m"
CL_CYAN="\033[36;1m"
CL_WHITE="\033[37;1m"
